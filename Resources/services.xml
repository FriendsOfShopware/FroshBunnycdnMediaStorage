<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="frosh_bunnycdn_media_storage.cache_dir">%kernel.root_dir%/var/cache/bunnycdn_storage</parameter>
    </parameters>

    <services>
        <service id="frosh_bunnycdn_media_storage.subscriber.adapter_collection_subscriber"
                 class="FroshBunnycdnMediaStorage\Subscriber\AdapterCollectionSubscriber">
            <argument type="service" id="service_container"/>
            <argument type="service" id="frosh_bunnycdn_media_storage.cache"/>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="frosh_bunnycdn_media_storage.cache" class="Doctrine\Common\Cache\FilesystemCache">
            <argument type="string">%frosh_bunnycdn_media_storage.cache_dir%</argument>
        </service>

        <service id="thumbnail_generator_bunnycdn" class="FroshBunnycdnMediaStorage\Components\ThumbnailGenerator"
                 decorates="thumbnail_generator_basic">
            <argument type="service" id="frosh_bunnycdn_media_storage.config"/>
            <argument type="service" id="thumbnail_generator_bunnycdn.inner"/>
        </service>

        <service class="FroshBunnycdnMediaStorage\Subscriber\LegacyStructConverterSubscriber">
            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="frosh_bunnycdn_media_storage.config" class="Shopware\Components\Plugin\CachedConfigReader">
            <factory service="shopware.plugin.cached_config_reader" method="getByPluginName"/>
            <argument type="string">%frosh_bunnycdn_media_storage.plugin_name%</argument>
        </service>

    </services>
</container>
